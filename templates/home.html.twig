{% extends "base.html.twig" %}
{% block  title %}
	Acceuil
{% endblock %}
{% block  body %}
	<h1>Nos Produit Phares</h1>
	<diV class="row">
		{% for p in products %}
			<div class="col">
				<div class="card">
					<img src="{{ p.mainPicture }}" class="img-fluid" alt="Image de produit">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							({{p.price / 100}}
							&euro;)</h4>
						<span class="badge rounded-pill bg-primary">{{p.category.name}}</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="#" class="btn btn-primary btn-sm">Detail</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</diV>
	<hr>
	<h2>Un service irraprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Facilis officiis rerum dignissimos id. Eaque, quae?</p>
	<div class="row">
		{% include "shared/_assurance.html.twig" with {
			'color':'primary',
			'icone':'fas fa-truck',
			'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Ipsa id, nam maxime ut numquam quisquam."
		} %}
		{% include "shared/_assurance.html.twig" with {
			'color':'success',
			'icone':'fas fa-check',
			'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Ipsa id, nam maxime ut numquam quisquam."
		} %}
		{% include "shared/_assurance.html.twig" with {
			'color':'warning',
			'icone':'fas fa-lock',
			'text': "Lorem ipsum dolor sit amet consectetur adipisicing elit. Ipsa id, nam maxime ut numquam quisquam."
		} %}
	</div>
{% endblock %}
